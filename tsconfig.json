{
    "compilerOptions": {
        "declaration": true,
        "module": "node16",
        "esModuleInterop": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "lib": ["ES6", "DOM"],
        "target": "ES6"
    },
    "exclude": [
        "examples",
        "lib",
        "node_modules",
        "pages",
        "test"
    ],
    "include": ["src"],
    "typedocOptions": {
        "entryPointStrategy": "Expand",
        "entryPoints": ["src"],
        "includes": ["pages"],
        "out": "docs"
    }
}
